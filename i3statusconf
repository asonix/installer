# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
#        interval = 1
}

order += "volume master"
order += "disk /"
order += "disk /home/"
order += "wireless wlan0"
order += "ethernet eth0"
order += "ethernet usb0"
order += "battery 0"
order += "load"
order += "tztime local"

wireless wlan0 {
    format_up = "W: (%quality at %essid)"
    format_down = "W"
}

ethernet eth0 {
    # if you use %speed, i3status requires root privileges
    format_up = "E: (%speed)"
    format_down = "E"
}

ethernet usb0 {
	format_up = "U: %ip"
	format_down = "U"
}

battery 0 {
    format = "B: %percentage"
    format_down = "B"
}

tztime local {
    format = "D: %m.%d T: %H.%M"
}

load {
    format = "L: %1min"
}

disk "/" {
    format = "OS: %avail"
}

disk "/home/" {
	format = "S: %avail"
}

volume master {
    format = "V: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
